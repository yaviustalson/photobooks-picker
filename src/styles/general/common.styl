html, body
    margin 0
    padding 0
    width 100%
    height 100%
    user-select none
    -webkit-user-select none
    touch-action none
    font-family 'OpenSans'

ul
    padding 0
    margin 0
    list-style none

h1,h2,h3,h4,h5
    font-weight 400
  
*, *:before, *:after
    box-sizing border-box

.hidden
    heigth 0
    oveflow hidden

input,
textarea
    border none
    
    &:focus,
    &:active
        outline none

.object-fit
    object-fit cover
    object-position center
    font-family 'object-fit: cover; object-position: center;'

    &_contain
        object-fit contain
        font-family 'object-fit: contain; object-position: center;'

.list-complete-item
    padding 4px
    margin-top 4px
    border solid 1px
    transition all 1s


.list-complete-enter, .list-complete-leave-active 
    opacity 0

a
    text-decoration none


.slick-slider,
.slick-list,
.slick-track,
.slick-slide,
.slick-slide > div
    height 100%

.slick-slider
    width 100%

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button 
    /* display: none; <- Crashes Chrome on hover */
    -webkit-appearance none
    margin 0 /* <-- Apparently some margin are still there even though it's hidden */

input[type=number] 
    -moz-appearance textfield /* Firefox */


button
	background none
	color inherit
	border none
	padding 0
	font inherit
	cursor pointer
	outline inherit

a,
a:visited
    color currentColor
