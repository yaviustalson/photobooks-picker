$root = '.c-selectable-list'
$activeBlue = #1A649A

{$root}
    width 100%
    height auto
    display flex
    flex-direction column
    font-size 17px

    &__item,
    &__expand-btn
        width 100%
        min-height 37px
        display flex
        align-items center
        padding 10px
        cursor pointer
        color $gray

        svg
            color $gray

        &.active
            border-color $gray

            {$root}__item-title
                font-weight bold

            {$root}__item-add
                font-weight 500
            
        &:hover
            color $blue
            border-color $blue

            svg
                color $blue

        &:active
            color $activeBlue
            border-color $activeBlue

            svg
                color $activeBlue

    &__item
        border-left 1px solid transparent

    &__item-title
        margin-right 10px
        font-weight 500

    &__item-add
        font-size 14px

    &__expand-btn
        justify-content space-between
        background-color $superlightgray
        svg
            height 10px

    
